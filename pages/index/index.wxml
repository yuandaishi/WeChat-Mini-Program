<!-- 轮播图 -->
<view class="swiper">
  <swiper autoplay interval="2000" indicator-dots indicator-color="#fff" indicator-active-color="#1b9adc" circular>
    <!-- autoplay：轮播图自动播放; interval:自动播放时长  indicator-dots:轮播图滚动点 indicator-color：indicator-dots颜色-->
    <swiper-item>
      <image src="/assets/images/2.png" mode="widthFix" lazy-load show-menu-by-longpress />
    </swiper-item>
    <swiper-item>
      <image src="/assets/images/3.png" mode="widthFix" lazy-load show-menu-by-longpress />
    </swiper-item>
    <swiper-item>
      <image src="/assets/images/4.png" mode="widthFix" lazy-load show-menu-by-longpress />
    </swiper-item>
  </swiper>
</view>
